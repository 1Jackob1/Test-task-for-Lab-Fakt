{% extends 'base_bootstrap.html.twig' %}

{% block body %}
    <h1>Books list</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope = "col">Id</th>
                <th scope = "col">Title</th>
                <th scope = "col">Description</th>
                <th scope = "col">Image</th>
                <th scope = "col">Realise date</th>
                <th scope = "col">Authors</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <th scope = "row"><a href="{{ path('books_show', { 'bookId': book.bookId }) }}">{{ book.bookId }}</a></th>
                <td>{{ book.bookName }}</td>
                <td>{{ book.bookDesc }}</td>
                <td>{{ book.bookImg }}</td>
                <td>{% if book.bookPubDate %}{{ book.bookPubDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        {% for author in book.author %}
                            <li>{{ author.getAuthorName }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
