{% extends 'base_bootstrap.html.twig' %}

{% block body %}
    <h1>Authors list</h1>

    <table class = "table table-dark">
        <thead>
            <tr>
                <th scope = "col">Author_id</th>
                <th scope = "col">Author_name</th>
                <th scope = "col">Author_second_name</th>
                <th scope = "col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <th scope = "row"><a href="{{ path('authors_show', { 'authorId': author.authorId }) }}">{{ author.authorId }}</a></th>
                <td>{{ author.authorName }}</td>
                <td>{{ author.authorSecondName }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('authors_show', { 'authorId': author.authorId }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
